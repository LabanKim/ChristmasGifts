<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorTransparentBlack"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/tv_name_initial"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/red_circle"
        tools:text="L"
        android:textAlignment="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="Laban"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/iv_gift_icon"
        android:layout_alignTop="@+id/tv_name_initial"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_name_initial"/>

    <TextView
        android:id="@+id/tv_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="25/12/2018"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/iv_gift_icon"
        android:layout_below="@+id/tv_person_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_name_initial"/>

    <ImageView
        android:id="@+id/iv_gift_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/gift_grey"/>

</RelativeLayout>