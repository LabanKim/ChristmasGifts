<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPersonActivity"
    android:background="@drawable/xmas_five"
    android:paddingHorizontal="12dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparentBlack"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingTop="18dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Name"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/input_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Deadline"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="2018-12-25"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"/>

            <ImageView
                android:id="@+id/iv_pick_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_date_range_white_24dp"
                android:layout_toRightOf="@+id/tv_deadline"
                android:layout_marginLeft="25dp"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>