<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/xmas_one">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_people_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_items_count">

    </android.support.v7.widget.RecyclerView>


    <ProgressBar
        android:id="@+id/pb_loading_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_main_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:text="Use the button at the top right of the screen to add a person."
        android:visibility="invisible"
        android:textAlignment="center"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/transparent_rect"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp" />

    <RelativeLayout
        android:id="@+id/layout_general_items_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="16sp"
        android:paddingVertical="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTransparentBlack"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_total_general_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="Total Cost: Ksh 3000"/>

        <TextView
            android:id="@+id/tv_total_general_bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="Bought: 1/3"
            android:layout_alignParentRight="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/white"
            android:layout_below="@+id/tv_total_cost"
            android:layout_marginTop="3dp"/>

    </RelativeLayout>

</RelativeLayout>